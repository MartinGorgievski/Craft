@{
    ViewData["Title"] = "Privacy Policy";
}
@*<h1>@ViewData["Title"]</h1>*@
<style>
    .tr-style {
        border-top: 1px solid #d7d7d7;
        border-bottom: 1px solid #d7d7d7;
    }

    .th-style {
        padding: 10px;
        background-color: #efefef;
    }

    .card-text {
        margin-bottom: 10px;
    }

    .td-style {
        padding: 5px 0px 5px 5px;
    }

    .card-body {
        padding: 0.35rem;
    }

    .flex-container > div {
        margin-left: 10px;
    }

    .add-on-board-btn {
        margin-bottom: 10px;
    }
</style>
<div class="row">
    <div class="col-md-12">
        <div class="card border-secondary mb-3">
            <div class="card-header">What is a CPU ?</div>
            <div class="card-body text-secondary">
                <h5 class="card-title">Secondary card title</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <p>Vendor</p>
    </div>

    <div class="col-md-10 flex-container" style="display: flex; flex-direction: row">
        <div class="card" style="width: 33.333%;">
            <img src="~/Upload/Images/i7procesor.png" style="padding: 10px" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Intel Core i7-8700K Processor 3.7GHz 8.0GT/s 12MB LGA 1151 CPU</h5>
                <div class="card-text">
                    <table class="w-100">
                        <tr class="tr-style">
                            <th class="th-style">Proccessor:</th>
                            <td class="td-style">Intel Core i7-8700K</td>
                        </tr>
                        <tr class="tr-style">
                            <th class="th-style">Clock:</th>
                            <td class="td-style">3.7GHz</td>
                        </tr>
                        <tr class="tr-style">
                            <th class="th-style">Generation:</th>
                            <td class="td-style">8</td>
                        </tr>
                        <tr class="tr-style">
                            <th class="th-style">Socket:</th>
                            <td class="td-style">1151</td>
                        </tr>
                        <tr class="tr-style">
                            <th class="th-style">Prise ~</th>
                            <td class="td-style">250 $</td>
                        </tr>
                    </table>
                </div>
                <div class="w-100 text-center">
                    <a href="#" data-toggle="tooltip" data-placement="bottom" title="Add on board" class="btn btn-outline-dark add-on-board-btn w-20" style="border-radius: 50%">
                        <i class="fa fa-plus "></i>
                    </a>
                    <a href="#" data-toggle="tooltip" data-placement="bottom" title="Quick preview" class="btn btn-outline-primary add-on-board-btn w-20" style="border-radius: 50%">
                        <i class="fa fa-search"></i>
                    </a>

                    <a href="#" data-toggle="tooltip" data-placement="bottom" title="Full preview" class="btn btn-outline-danger add-on-board-btn w-20" style="border-radius: 50%">
                        <i class="fa fa-list-alt"></i>
                    </a>
                </div>

            </div>
        </div>
      
    </div>
</div>
@section Scripts{
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        });
    </script>
}
