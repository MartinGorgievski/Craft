@model IEnumerable<Craft.Models.ComponentSpecification>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CmsLayout.cshtml";
}

<h1>Component Specification</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="myTable" class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AttributeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateAdded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Primary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HardwareComponent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComponentSpecificationCategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AttributeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Primary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HardwareComponent.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ComponentSpecificationCategory.Name)
            </td>
            <td>
                <a class="d-block" asp-action="Edit" asp-route-id="@item.ID">Edit</a> 
                <a class="d-block" asp-action="Details" asp-route-id="@item.ID">Details</a> 
                <a class="d-block" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
